<div class="row mt-5">
  <div class="col-md-6 m-auto">
    <div class="card card-body">
      <h1 class="text-center mb-3">
        <i class="fas fa-sign-in-alt"></i> Sign In
      </h1>
      <%# include ../partials/errMessage %>
      <form class="formSignin row g-3 needs-validation" novalidate>
        <!-- <input type="hidden" name="_csrf" value="<%#csrfToken %>" /> -->

        <div class="row-md-3">
          <label for="validationCustom02" class="form-label">Email</label>
          <input
            type="email"
            class="form-control"
            id="validationCustom02"
            name="email"
            placeholder="Enter Email"
            required
          />
          <div class="valid-feedback">looks goodüëç</div>
          <div class="invalid-feedback">Please provide an valid Email.</div>
        </div>
        <div class="row-md-3">
          <label for="validationCustom03" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="validationCustom03"
            name="password"
            placeholder="Create Password"
            required
            minlength="8"
            autocomplete="off"
            aria-describedby="inputGroupPrepend"
          />
          <div class="valid-feedback">looks goodüëç</div>
          <div class="invalid-feedback">
            Please provide an valid Password with up to 8 characters.
          </div>
        </div>
        <button type="submit" class="btn btn-primary btn-block">Sign In</button>
      </form>
      <p class="lead mt-4">No Account? <a href="/nt/signup">Sign Up</a></p>
    </div>
  </div>
</div>
